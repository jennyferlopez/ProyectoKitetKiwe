<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".activities.AvatarActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:src="@drawable/img_cinta_dos"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCOGE TU AVATAR"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/cardview_dark_background"
        android:id="@+id/escojer_a"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="@dimen/content"
            android:layout_height="45dp"
            android:text="~MUJER~"
            android:background="@drawable/btn_mujer"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:id="@+id/btn_mujer" />

        <Button
            android:layout_width="@dimen/content"
            android:layout_height="45dp"
            android:text="~HOMBRE~"
            android:background="@drawable/btn_hombre"
            android:textSize="20sp"
            android:id="@+id/btn_hombre"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imgAvatar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_unoC"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:id="@+id/img_dos"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_tres"/>

        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="~Aceptar~"
        android:layout_margin="@dimen/padding"
        android:id="@+id/btn_guardarAvatar"
        android:textSize="22sp"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_mujer"
        android:textColor="@color/cardview_dark_background"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:src="@drawable/img_cinta_dos"/>
</LinearLayout>